<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ProfileFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_profil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_kyrgyz" />
    </androidx.cardview.widget.CardView>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_write"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="10dp"
        android:hint="name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_view">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/data_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_akyl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Акылов Тилек"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_view" />

    <ImageView
        android:id="@+id/iv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_akyl" />

    <TextView
        android:id="@+id/tv_bishkek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="Bishkek, Kyrgyzstan"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/iv_location"
        app:layout_constraintTop_toBottomOf="@id/tv_akyl" />

    <TextView
        android:id="@+id/tv_aboutakyl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Hello! I am Student. I like play chess.If you wanto play I agree"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_bishkek"/>


    <TextView
        android:id="@+id/nineten1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/view1"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_aboutakyl"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:text="19"/>

    <TextView
        android:id="@+id/shots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nineten1"
        app:layout_constraintLeft_toLeftOf="@id/nineten1"
        app:layout_constraintRight_toRightOf="@id/nineten1"
        android:text="Shots"
        android:textSize="11sp"/>


    <View
        android:id="@+id/view1"
        android:layout_width="2dp"
        android:layout_height="55dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_aboutakyl"
        app:layout_constraintRight_toLeftOf="@id/nineten2"
        android:background="#575454"/>

    <TextView
        android:id="@+id/nineten2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="337"
        android:textColor="@color/black"
        android:layout_margin="16dp"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@id/tv_aboutakyl"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
        android:id="@+id/followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nineten2"
        app:layout_constraintLeft_toLeftOf="@id/nineten2"
        app:layout_constraintRight_toRightOf="@id/nineten2"
        android:text="followers"
        android:textSize="11sp"/>

    <View
        android:id="@+id/view2"
        android:layout_width="2dp"
        android:layout_height="55dp"
        android:background="#575454"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toRightOf="@id/nineten2"
        app:layout_constraintTop_toBottomOf="@id/tv_aboutakyl"/>

    <TextView
        android:id="@+id/nineten3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_aboutakyl"
        app:layout_constraintLeft_toRightOf="@id/view2"
        android:layout_margin="16dp"
        android:textSize="28sp"
        android:text="819"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nineten3"
        app:layout_constraintLeft_toLeftOf="@id/nineten3"
        app:layout_constraintRight_toRightOf="@id/nineten3"
        android:text="following"
        android:textSize="11sp"/>


    <ImageView
        android:id="@+id/image1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_english"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/followers" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_english"
        app:layout_constraintLeft_toRightOf="@id/image1"
        app:layout_constraintTop_toBottomOf="@+id/followers" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/followers"
        app:layout_constraintLeft_toRightOf="@id/image2"
        android:src="@drawable/ic_english"/>




</androidx.constraintlayout.widget.ConstraintLayout>



